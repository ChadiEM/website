    "test": "cypress run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChadiEM/website.git"
  },
  "author": "Chadi El Masri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChadiEM/website/issues"
  },
  "devDependencies": {
    "cypress": "^12.0.1",
    "lite-server": "^2.6.1",
    "prettier": "^2.8.0",
    "stylelint": "^14.16.0",
    "stylelint-config-recommended": "^12.0.0",
    "stylelint-no-unsupported-browser-features": "^6.0.1"
  }
}
